/* pages/courseList/courseList.wxss */
.noscroll{
  height: 100%;
  overflow: hidden;
}
.courseList-hd {
  padding: 18rpx 40rpx;
  border-bottom: 2rpx solid #EFEFF1; 
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  -webkit-align-items:center;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 2;
  background: #fff;
  box-sizing: border-box
}

.courseList-hd .menu-image {
  width: 26rpx;
  height: 23rpx;
  margin-right: 6rpx;
}

.courseList-modal{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  z-index: 1000; 
  top: 0; 
  background-color: rgba(0, 0, 0, .3);
  overflow-y: auto;
}

.courseList-switchCourse{
  position: relative;
  top: 0;
  width: 70%;
  height: auto;
  background-color: #fff;
}
.switchCourseIn {
   animation: courseMoveIn .4s cubic-bezier(0.23, 1, 0.32, 1);
   -webkit-animation: courseMoveIn .4s cubic-bezier(0.23, 1, 0.32, 1); 
}
.switchCourseOut {
   animation: courseMoveOut .4s cubic-bezier(0.23, 1, 0.32, 1);
   -webkit-animation: courseMoveOut .4s cubic-bezier(0.23, 1, 0.32, 1); 
}
@keyframes courseMoveIn {
  from {left: -70%;}
  to {left: 0%;}
}
@keyframes courseMoveOut {
  from {left: 0%;}
  to {left: -70%;}
}
.courseImage{
  width: 158rpx;
  height: 142rpx;
  border-radius: 30rpx;
}
.courseList-bd{
  position: relative;
  top: 122rpx
}
.courseList-bd .weui-cell__bd {
  padding-left: 22rpx;
}

.courseContent-top {
  font-size: 34rpx;
  color: #131313;
}
.courseContent-bottom {
  font-size: 28rpx;
  color: #575757;
}
.course-search-box{
  position: relative;
  width: 60%;
  border-bottom: 0;
  padding: 0;
}
.course-search-bar {
  width: 100%;
}
/*左侧滑出页面courseList-switchCourse 页面样式*/
/*-----------------------------------------*/
.courseList-switchCourse .weui-cells:nth-child(2) {
   border-top: 2rpx solid #EFEFF1; 
}
.courseList-switchCourse .weui-cells:nth-child(n+3)::before{
  content:" ";
  position:absolute;
  left:40rpx;
  top:0;
  right:40rpx;
  height:1px;
  border-top:2rpx solid #EFEFF1;
  color:#EFEFF1;
}
.courseList-switchCourse .weui-cell {
  padding: 35rpx 40rpx;
}
.courseList-switchCourse .weui-cells .weui-cell:nth-child(1) {
  font-size: 32rpx;
  font-weight: bolder;
  line-height: 34rpx;
}
.courseList-switchCourse .weui-cells .weui-cell:not(:nth-child(1)) {
  font-size: 30rpx;
  line-height: 34rpx;
}
