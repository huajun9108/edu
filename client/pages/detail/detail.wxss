/* pages/detail/detail.wxss */
.page{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}
.page_controls {
  width: 100%;
  height: 418rpx;
  position: relative;
}
.bottomBlock{
  display: flex;
  flex: 1;
  overflow: auto;
  flex-direction: column
}
 .poster{
  width: 100%;
  height: 100%;
}
.img {
  width: 40px;
  height: 40px;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
} 
video{
  width: 100%;
  height: 100%
}
.course{
  width: 100%; 
  padding: 20rpx 0 10rpx 0;
  z-index: 500;
  background: #fff;
} 
.ScrollView{
  flex: 1;
  overflow: auto;
}
.weui-flex__item .course_title{
  font-size: 30rpx;
  font-weight: bold;
}
.course_share{
  text-align: right;
} 
.course_share image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
} 
.share_image{
  padding-left: 14rpx;
  width: 32rpx;
} 

.consult_btn{
  display: block;
  width: 72rpx;
  line-height: 30rpx; 
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 6rpx;
  border: 2rpx solid #dcc07f;
  border-radius: 15rpx;
  text-align: center;
  padding: 0;
  background: #fff;
  margin-left: 0;
}
.weui-tab{
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: auto; 
} 
.weui-navbar{
  position: relative; 
}
.weui-tab__panel {
  padding-top: 10rpx;
}
.weui-tab__content {
  font-size: 26rpx;
}                                                  
.weui-tab__content .course_title{
  font-weight: bold;
  color:#5f5f5f;
}
.common_price{
  font-weight: bold;
}
.vip_price{
  color: #484848;
  padding-left: 16rpx;
}
.cuorse_number{
  color: #484848;
}
.course_part{
  margin-top: 10rpx;
  line-height: 26rpx;
}
.course_list{
  margin-top: 16rpx;
  padding: 0 40rpx 10rpx 0;
}
.course_heading{
  font-size: 28rpx;
  line-height: 80rpx;
  padding: 0 18rpx 0 18rpx;
  background: #f5f7f9;
  margin-top: 12rpx;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  justify-content: space-between
}
.course_heading image{
  width: 46rpx;
  height: 46rpx;
}
.course_teacher{
  font-size: 24rpx;
}
.teacher{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.teacher_name{
  font-size: 26rpx;
  font-weight: bold;
}
.teacher_box{
  padding-left: 20rpx;
}
.teacher_title{
  display: block;
  color: #888888;
}
.teacher_image{
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.teacher_detail{
  padding-left: 118rpx; 
}
.page_btn{
  width: 100%;
  padding:20rpx 0;
  display:-webkit-box;display:-webkit-flex;display:flex;
  -webkit-box-align:center;-webkit-align-items:center;align-items:center;
  line-height: 90rpx;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  font-size: 38rpx;
  background: #fff;
}
.total_price{
  font-weight: bold;
}
.vip_symbol{
  color: #7e7e7e;
}
.pay_btn{
  width: 50%;
}
.common_btn .weui-btn{
  background: #e5e5e5;
  color: #7c7c7c;
}
.page-error{
  flex: 1;
  width: 100%;
  padding-top: 50%;
}
.share{
  background: #fff;
  display: inline;
  padding-left: 0;
  padding-right: 0;
  line-height: 0;
}
