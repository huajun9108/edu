<!--pages/myTest/myTest.wxml-->
<import src="../common/common.wxml" />
<view class="weui-tab">
  <view class="weui-navbar">
    <block wx:for="{{tabs}}" wx:key="*this">
      <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
        <view class="weui-navbar__title">{{item}}</view>
      </view>
    </block>
    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);">
    </view>
  </view>
  <view class="weui-tab__panel">
    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
      <template is="examList-2" data="{{showTime, examList, exam_msg}}" />
    </view>
    <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
       <modal examList="{{examList}}" showCheckCss="{{showCheckCss}}" delCss="{{delCss}}" hideStatus="{{hideStatus}}" binddelConfirm="delConfirm" />
    </view>
  </view>
</view>