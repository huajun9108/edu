<!--pages/myFavor/myFavor.wxml-->
<import src="../common/common.wxml" />
<view class="page">
  <view class="myFavor">
    <view class="weui-cells weui-cells_after-title" wx:for="{{favorList}}" wx:key="index" bindtap="bindCheckbox" data-index="{{index}}">
      <view class="checkBox">
        <image wx:if="{{item.selected}}" src="{{checkSrc}}" class="checkImage"></image>
        <image wx:else src="{{uncheckSrc}}" class="checkImage"></image>
      </view>
      <view catchtap="{{courseTap}}" class="weui-cell weui-cell_access {{showCheckCss}}" hover-class="{{hoverActive}}" data-index="{{index}}" data-title="{{item.title}}" data-courseid="{{item.id}}">
        <view class="weui-cell__hd">
          <image src="{{item.icon}}" class="favorImage" style="vertical-align: middle;"></image>
        </view>
        <view class="weui-cell__bd">
          <view class="order-top">{{item.title}}</view>
          <view class="order-bottom">{{item.teacher}}</view>
        </view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </view>
  <block wx:if="{{!pageIsEmpty}}">
    <view class="edit" bindtap="showDel">编辑</view>
    <view class="weui-flex {{delCss}}">
      <view class="weui-flex__item">
        <view class="placeholder" bindtap="hideDel">取消</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder" bindtap="bindSelectAll">{{selectAll}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder base_color" bindtap="delItem">删除({{num}})</view>
      </view>
    </view>
  </block>
  <modal modal-hidden="{{is_modal_Hidden}}" modal-msg="{{is_modal_Msg}}" bindconfirm="confirm"/>
  <template is="page-empty" wx:if="{{pageIsEmpty}}" data="{{tipMsg}}">
  </template>
</view>