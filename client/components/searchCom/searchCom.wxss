/* components/searchCom/searchCom.wxss */
.searchbox{
  width: 100%;
  height: 100%;
  position: fixed; 
  top: 0; 
  z-index: 1000;
  background: #fff;
}
.weui-search-bar{
  position:relative;
  padding:18rpx 40rpx;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  box-sizing:border-box;
  background-color:#fff;
  border-bottom: 2rpx solid #efeff1
}
.weui-search-bar__form{
  position:relative;
  -webkit-box-flex:1;
  -webkit-flex:auto;
  flex:auto;
  border-radius:20rpx;
  background:#f5f7f9;
}
.weui-icon-search_in-box{
  position:absolute;
  left:20rpx;
  top:29rpx;
  width: 28rpx;
  height: 28rpx;
}
.weui-search-bar__box{
  position:relative;
  padding-left:54rpx;
  width:100%;
  box-sizing:border-box;
}
.weui-search-bar__input{
  height:86rpx;
  line-height:86rpx;
  font-size:32rpx;
  color:#5c5c5b;
}
.weui-icon-clear{
  position:absolute;
  top:33rpx;
  right:20rpx;
  width: 20rpx;
  height:20rpx;
  z-index: 1001
}
.weui-search-bar__cancel-btn{
  margin-left:10rpx;
  line-height:86rpx;
  color:#cfb16b;
  white-space:nowrap;
  font-size: 28rpx;
}
.searchbar{
  width: 100%;
  height: auto;
  margin-top: 18rpx;
  padding:0 40rpx;
  box-sizing:border-box;
}
.searchbar .result-box{
  display: inline-block;
  background-color: #fff;
  padding: 16rpx 14rpx;
  border: 1rpx solid #dcc07f;
  border-radius: 26rpx;
  margin:0 12rpx 12rpx 0;
  font-size: 28rpx;
  line-height: 1;
}
